class_name Spell extends ItemData

@export var is_spell : bool = true
@export var cooldown : int = 0
@export var does_target_self : bool = false
@export var max_distance : int = 0
@export var effect : Effects
@export var projectile_texture : Texture2D
@export var is_magical : bool = true
@export var has_multiple_projectiles : bool = false
@export var num_projectiles : int = 0
@export var speed : float = 0
@export var max_uses : int = 0

func use(target) -> void:
	if is_spell:
		target.cast(self)
	pass
